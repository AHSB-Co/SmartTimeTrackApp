<Window x:Class="TimeTrack.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TimeTrack" Height="350" Width="525">
    <Grid>
        <!-- Layout for showing the bars representing active/idle time -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">

            <!-- Header -->
            <TextBlock Text="Time Tracking Visualization" FontSize="18" FontWeight="Bold" Margin="10" HorizontalAlignment="Center" />

            <!-- Canvas for drawing Active and Idle Time Bars -->
            <Canvas x:Name="TimeCanvas" Height="50" Width="400" Background="LightGray" Margin="10"/>

            <!-- Labels for displaying Total Active Time and Idle Time -->
            <StackPanel Orientation="Vertical" Margin="10">
                <Label x:Name="lblTotalActiveTime" Content="Total Active Time: 0 hours" FontSize="14" />
                <Label x:Name="lblTotalIdleTime" Content="Total Idle Time: 0 hours" FontSize="14" />
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
